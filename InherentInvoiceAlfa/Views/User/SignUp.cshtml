@model CreateUserVM
@{
    ViewBag.Title = "Sign Up";
}
<h1>Registrering</h1>
<hr />
<div class="container-fluid">
    <form asp-controller="User" asp-action="SignUp" method="post">
        <fieldset class="fieldSet">
            <!-- Name -->
            <br />
            <div class="input-group">
                <span asp-validation-for="@Model.UserName" class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                <input asp-for="@Model.UserName" class="form-control" placeholder="Användarnamn">
            </div>
            <br />
            <!-- Email -->
            <div class="input-group">
                <span asp-validation-for="@Model.Email" class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                <input asp-for="@Model.Email" class="form-control" placeholder="E-post">
            </div>
            <br />
            <!-- Password -->
            <div class="input-group">
                <span asp-validation-for="@Model.Password" class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                <input asp-for="@Model.Password" class="form-control" placeholder="Lösenord">
            </div>
            <br />
            <!-- Submit button -->
            <br />
            <button type="submit" class="btn btn-default">Registrera</button>
        </fieldset>
    </form>
    <br />
    <div class="dialog-footer">
        <hr />
        <!--Added a link to signUp page to "Register now"-->
        <span class="dialogBox-footer-register">Har redan ett konto? <b><a asp-controller="User" asp-action="SignIn" method="post">Logga in</a></b></span>
    </div>
</div>
